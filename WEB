//login.php

<?php
session_start();
$conn = new mysqli("localhost", "studentuser", "studentpass", "studentdb");

// Check connection
if ($conn->connect_error) {
    die("Connection failed: " . $conn->connect_error);
}

// Get user input (with basic sanitization)
$reg_no = $conn->real_escape_string($_POST['reg_no']);
$password = $_POST['password'];

// Check password (hardcoded for now - you should use password_hash() in production)
if ($password === "student123") {
    // Fetch student data using prepared statement to prevent SQL injection
    $sql = "SELECT s.name, s.reg_no, p.profile_picture, p.address, p.phone_number as phone 
            FROM student_marks s
            LEFT JOIN dashboard p ON s.reg_no = p.reg_no
            WHERE s.reg_no = ?";
    
    $stmt = $conn->prepare($sql);
    $stmt->bind_param("s", $reg_no);
    $stmt->execute();
    $result = $stmt->get_result();
    
    if ($result->num_rows > 0) {
        $_SESSION['student_data'] = $result->fetch_assoc();
        header("Location: dashboard.php");
        exit();
    } else {
        die("Student not found!");
    }
} else {
    echo "Invalid credentials!";
}
$conn->close();
?>


//marks display.php

<?php
$conn = new mysqli("localhost", "studentuser", "studentpass", "studentdb");
$reg_no = $_SESSION['student_data']['reg_no'];
$sql = "SELECT * FROM student_marks WHERE reg_no = '$reg_no'";
$result = $conn->query($sql);

if ($result->num_rows > 0) {
    $row = $result->fetch_assoc();
    
    // Determine grade color and ranking
    $grade_color = match($row['grade']) {
        'A+' => 'success',
        'A' => 'success',
        'B+' => 'primary',
        'B' => 'info',
        'C+' => 'warning',
        'C' => 'warning',
        'D' => 'danger',
        'F' => 'danger',
        default => 'secondary'
    };

    $performance_message = match(true) {
        $row['percentage'] >= 90 => 'Excellent Performance! Outstanding achievement!',
        $row['percentage'] >= 80 => 'Great Job! Keep up the good work!',
        $row['percentage'] >= 70 => 'Good Performance. You can improve.',
        $row['percentage'] >= 60 => 'Satisfactory. Focus on weak areas.',
        default => 'Needs Significant Improvement'
    };
?>
<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
