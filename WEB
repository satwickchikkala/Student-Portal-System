            background: linear-gradient(145deg, #f4f9ff, #e6f2ff);
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            padding: 25px;
            max-width: 600px;
            margin: 20px auto;
        }
        .subject-progress {
            height: 30px;
            background-color: #e9ecef;
            border-radius: 15px;
            overflow: hidden;
            margin-bottom: 15px;
        }
        .progress-bar {
            transition: width 1s ease-in-out;
        }
        .grade-badge {
            font-size: 1.2em;
            padding: 10px 15px;
        }
        .performance-message {
            background-color: rgba(0,123,255,0.1);
            border-left: 5px solid #007bff;
            padding: 15px;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="academic-card">
            <h2 class="text-center mb-4">Academic Performance</h2>
            
