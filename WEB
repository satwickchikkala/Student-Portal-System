                    <h4>Subject Marks</h4>
                    <div class="subject-progress mb-3">
                        <div class="progress-bar bg-primary" role="progressbar" 
                             style="width: <?php echo $row['subject1']; ?>%" 
                             aria-valuenow="<?php echo $row['subject1']; ?>" 
                             aria-valuemin="0" aria-valuemax="100">
                            Subject 1: <?php echo $row['subject1']; ?>%
                        </div>
                    </div>
                    <div class="subject-progress mb-3">
                        <div class="progress-bar bg-success" role="progressbar" 
                             style="width: <?php echo $row['subject2']; ?>%" 
                             aria-valuenow="<?php echo $row['subject2']; ?>" 
                             aria-valuemin="0" aria-valuemax="100">
                            Subject 2: <?php echo $row['subject2']; ?>%
                        </div>
                    </div>
                    <div class="subject-progress mb-3">
                        <div class="progress-bar bg-warning" role="progressbar" 
                             style="width: <?php echo $row['subject3']; ?>%" 
                             aria-valuenow="<?php echo $row['subject3']; ?>" 
                             aria-valuemin="0" aria-valuemax="100">
                            Subject 3: <?php echo $row['subject3']; ?>%
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4 text-center">
                    <h4>Summary</h4>
                    <span class="badge bg-<?php echo $grade_color; ?> grade-badge">
                        Grade: <?php echo $row['grade']; ?>
                    </span>
                    <p class="mt-3">
                        <strong>Overall Percentage:</strong><br>
                        <span class="text-primary h4"><?php echo $row['percentage']; ?>%</span>
                    </p>
                </div>
            </div>
            
            <div class="performance-message">
                <h5>Performance Insight</h5>
                <p><?php echo $performance_message; ?></p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
<?php
} else {
    echo '<div class="container mt-5"><div class="alert alert-warning text-center">No marks found!</div></div>';
}
$conn->close();
?>


//results.php

<?php
session_start();
if (!isset($_SESSION['reg_no'])) {
    header("Location: index.html");
    exit();
}

$servername = "localhost";
$username = "studentuser";
$password = "studentpass";
$dbname = "studentdb";

// Create connection
$conn = new mysqli($servername, $username, $password, $dbname);

// Check connection
if ($conn->connect_error) {
    die("Connection failed: " . $conn->connect_error);
}

$reg_no = $_SESSION['reg_no'];
$sql = "SELECT * FROM student_marks WHERE reg_no = '$reg_no' LIMIT 1";
$result = $conn->query($sql);

if ($result->num_rows > 0) {
    $row = $result->fetch_assoc();
} else {
    die("No records found");
}
$conn->close();
?>

<!DOCTYPE html>
<html>
<head>
    <title>Student Results</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; }
        .result-card { border: 1px solid #ddd; padding: 20px; max-width: 500px; margin: 0 auto; }
        table { width: 100%; border-collapse: collapse; margin: 20px 0; }
        th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
        th { background-color: #f2f2f2; }
        .summary { margin-top: 20px; font-weight: bold; }
    </style>
</head>
<body>
    <div class="result-card">
        <h2>Student Result</h2>
        <p><strong>Name:</strong> <?php echo htmlspecialchars($row['name']); ?></p>
        <p><strong>Registration No:</strong> <?php echo htmlspecialchars($row['reg_no']); ?></p>
        
        <table>
            <tr>
                <th>Subject</th>
                <th>Marks</th>
            </tr>
            <tr>
                <td>Subject 1</td>
                <td><?php echo $row['subject1']; ?></td>
            </tr>
            <tr>
                <td>Subject 2</td>
                <td><?php echo $row['subject2']; ?></td>
            </tr>
            <tr>
                <td>Subject 3</td>
                <td><?php echo $row['subject3']; ?></td>
            </tr>
        </table>
        
        <div class="summary">
            <p>Percentage: <?php echo number_format($row['percentage'], 2); ?>%</p>
            <p>Grade: <?php echo $row['grade']; ?></p>
        </div>
        
        <a href="logout.php">Logout</a>
    </div>
</body>
</html>







//dashboard.php

<?php
session_start();

// Debug session
error_log("Session data at dashboard start: " . print_r($_SESSION, true));

if (!isset($_SESSION['student_data'])) {
    header("Location: index.html");
    exit();
}

$student = $_SESSION['student_data'];

// Display upload status messages
$upload_status = '';
if (isset($_GET['upload'])) {
    if ($_GET['upload'] == 'success') {
        $upload_status = '<div class="alert alert-success">Profile picture updated successfully!</div>';
    } elseif (isset($_GET['error'])) {
        $error_messages = [
            'invalidfiletype' => 'Invalid file type. Only JPG, JPEG, PNG, GIF are allowed.',
            'filetoobig' => 'File is too large. Maximum size is 5MB.',
            'uploadfailed' => 'Failed to upload profile picture.',
            'movefailed' => 'Failed to save the uploaded file.',
            'notimage' => 'The selected file is not an image.',
            'nofile' => 'No file was selected for upload.'
        ];
        $upload_status = '<div class="alert alert-danger">' . $error_messages[$_GET['error']] . '</div>';
    }
}
?>
